{
  "name": "base-indexer",
  "version": "1.0.0",
  "description": "Base blockchain indexer with PostgreSQL storage",
  "main": "dist/index.js",
  "type": "module",
  "scripts": {
    "build": "tsc && npm run copy-files",
    "copy-files": "mkdir -p dist/db/migrations && cp -r src/db/migrations/*.ts dist/db/migrations/",
    "start": "node dist/index.js",
    "dev": "node --loader ts-node/esm src/index.ts",
    "typecheck": "tsc --noEmit",
    "setup": "node --loader ts-node/esm src/db/setup.ts",
    "drop": "node --loader ts-node/esm src/db/drop.ts"
  },
  "dependencies": {
    "@types/p-limit": "^2.2.0",
    "dotenv": "^16.4.5",
    "ethers": "^6.11.1",
    "p-limit": "^6.2.0",
    "pg": "^8.11.3",
    "pg-format": "^1.0.4",
    "winston": "^3.11.0"
  },
  "devDependencies": {
    "@types/node": "^20.11.24",
    "@types/pg": "^8.11.2",
    "@types/pg-format": "^1.0.5",
    "ts-node": "^10.9.2",
    "typescript": "^5.3.3"
  }
}
